        <Grid  
            Grid.Row="1">
            <Grid 
                IsVisible="{Binding IsBusy}">
                <Label 
                    Text="NO WorkOrders FOUND"      
                    IsVisible="{Binding WorkOrders.Count}"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Grid>
            <ListView
                x:Name="WorkOrders"       
                IsVisible="{Binding WorkOrders.Count}"
                ItemsSource="{Binding WorkOrders}"
                HasUnevenRows="True"
                SeparatorVisibility="Default"
                CachingStrategy="RecycleElement"
                Style="{StaticResource ProductsListStyle}">
                <ListView.ItemTemplate>
      <DataTemplate>
          <ViewCell>
              <StackLayout Padding="15,0">
              <Label Text="{Binding WorkOrderItem}" />
              <Label Text="{Binding WorkOrderMonth}" />
              <!-- Mark Checked Button-->
              <Button Text="Mark Checked"></Button>
            <Button Text="Delete"></Button> 
         </StackLayout>
          </ViewCell>
      </DataTemplate>
       
    </ListView.ItemTemplate>
            </ListView>
        </Grid>
        <!-- INDICATOR -->
        <ActivityIndicator
            Grid.Row="0"
            Grid.RowSpan="2"
            IsRunning="{Binding IsBusy}"  
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center"
            HorizontalOptions="Center">
            <ActivityIndicator.WidthRequest>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="iOS, Android" Value="100" />
                    <On Platform="UWP, WinRT, WinPhone" Value="400" />
                </OnPlatform>
            </ActivityIndicator.WidthRequest>
        </ActivityIndicator>
    </Grid>
